{
  "openapi": "3.0.4",
  "info": {
    "title": "UserService API",
    "version": "v1"
  },
  "paths": {
    "/api/Users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Users/create-user": {
      "post": {
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateUserDto": {
        "required": [
          "admin",
          "gender",
          "login",
          "name",
          "password"
        ],
        "type": "object",
        "properties": {
          "login": {
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9]+$",
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9]+$",
            "type": "string"
          },
          "name": {
            "minLength": 1,
            "pattern": "^[a-zA-Zа-яА-ЯёЁ]+$",
            "type": "string"
          },
          "gender": {
            "maximum": 2,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "birthday": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "admin": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "login",
          "password"
        ],
        "type": "object",
        "properties": {
          "login": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Please enter a valid token",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}